[flake8]
exclude =
    .git
    __pycache__
    __init__.py
    setup.py
    example_usage.py
    .eggs
    build
    docs
    datasets
    text_explainability/locale
    text_explainability/test
extend-ignore =
    D101
    D102
    D105
    D107
    D205
    D400
    D401
    D402
    D412
    D413
    E127
    W291
ignore-decorators =
    property
select = C,E,F,W,B,B950,D,RST

max-line-length=120